@model JobAdvertisement
@{
    ViewData["Title"] = "Create";
}

<div class="row" style="background-color:lightgoldenrodyellow">
    <div class="col-12">
        <form asp-controller="JobAdvertisement" asp-action="Create" method="post">

            <h3>Create Advertisement</h3>
            <div class="form-group row">
                <label asp-for="JobTypeName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="JobTypeName" class="form-control form-control-sm" />
                    <span class="text-danger" asp-validation-for="JobTypeName"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label asp-for="Responsibility" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="Responsibility" class="form-control form-control-sm" />
                    <span class="text-danger" asp-validation-for="Responsibility"></span>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.OnlineJobSiteId, new { @class = "col-control-label col-2 text-right" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.OnlineJobSiteId,
                    new SelectList(ViewBag.Onlines as IEnumerable<OnlineJobSite>, "OnlineJobSiteId", "OnlineJobSiteName"),
                     "--Select one--", new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.OnlineJobSiteId, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section styles {
    <environment include="Development">


    </environment>
}
@section scripts {
    <environment include="Development">
        <script src="~/libs/validate/jquery.validate.js"></script>
        <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
    </environment>
}

