@model Project_Work_2.Models.JobAdvertisement
@{
    ViewData["Title"] = "Delete";
}

<div class="card-body" style="background-color:lightcyan">

    <h4 class="card-title" style="text-align:center">Delete Job Advertisement Info</h4>

    <div class="row">
        <div class="col-2 text-right">
            Job Type Name
        </div>
        <div>
            @Model.JobTypeName
        </div>
    </div>

    <div class="row">
        <div class="col-2 text-right">
           Responsibility
        </div>
        <div>
            @Model.Responsibility
        </div>
    </div>
    <div class="row">
        <div class="col-2 text-right">
            Online JobSite Name
        </div>
        <div>
            @Model.OnlineJobSiteId
        </div>
    </div>

    <div class="row">
        <div class="col-4 offset-3">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.JobAdvertisementId)
                <input type="submit" value="Confirm" class="btn btn-danger btn-sm" />
            }
        </div>

    </div>
    @Html.ActionLink("Back in Main Page", "Index")
</div>

