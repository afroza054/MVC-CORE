@model Project_Work_2.Models.OnlineJobSite
@{
    ViewData["Title"] = "Delete";
}


<div class="card-body" style="background-color:lightcyan">

    <h4 class="card-title" style="text-align:center">Delete Online Job Site Info</h4>

    <div class="row">
        <div class="col-2 text-right">
            Job Site Name
        </div>
        <div>
            @Model.OnlineJobSiteName
        </div>
    </div>

    <div class="row">
        <div class="col-2 text-right">
            Started Jouney
        </div>
        <div>
            @Model.StartedJourney
        </div>
    </div>
    <div class="row">
        <div class="col-2 text-right">
            Response Instantly
        </div>
        <div>
            @Model.Web
        </div>
    </div>

    <div class="row">
        <div class="col-4 offset-3">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.OnlineJobSiteId)
                <input type="submit" value="Confirm" class="btn btn-danger btn-sm" />
            }
        </div>

    </div>
    @Html.ActionLink("Back in Main Page", "Index")
</div>


