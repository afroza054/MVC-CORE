@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Log in</h4>
    </div>
    <div class="card-body">
        <h5 class="card-subtitle">Use a local account to log in.</h5>
        <div class="card-text">
            <form id="account" method="post">


                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Input.Email" class="col-form-label col-2 text-right"></label>
                    <div class="col-4">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.Password" class="col-form-label col-2 text-right"></label>
                    <div class="col-4">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group row">
                    <div class="checkbox col-4 offset-2">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-2">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </div>
                <div class="form-group row">
                    @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                    <div class="col-4 offset-2">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <section>
            
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
